---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Solutions d'intelligence artificielle pour PME - Automatisez vos tâches répétitives et optimisez votre productivité">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--primary-color: #3a7bd5;
		--secondary-color: #00d2ff;
		--text-color: #333333;
		--background-color: #f9f9f9;
		--accent-gradient: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
	}
	
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	
	html {
		font-family: system-ui, sans-serif;
		background-color: var(--background-color);
		scroll-behavior: smooth;
	}
	
	body {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
	
	a {
		color: inherit;
		text-decoration: none;
	}
	
	h1, h2, h3, h4, h5, h6 {
		font-weight: 700;
	}
	
	.container {
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}
	
	.btn {
		display: inline-block;
		padding: 0.8rem 1.5rem;
		background: var(--accent-gradient);
		color: white;
		border-radius: 50px;
		font-weight: 600;
		transition: all 0.3s ease;
		border: none;
		cursor: pointer;
	}
	
	.btn:hover {
		transform: translateY(-3px);
		box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
	}
	
	.section {
		padding: 5rem 0;
	}
	
	@media (max-width: 768px) {
		.section {
			padding: 3rem 0;
		}
	}
</style>
