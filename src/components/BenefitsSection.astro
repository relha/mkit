    .benefits-section {
      padding: 3rem 0;
    }
    
    .section-title {
      font-size: 1.75rem;
      margin-bottom: 2rem;
    }
    
    .benefit-card {
      padding: 1.5rem;
    }
    
    .icon-container {
      width: 60px;
      height: 60px;
    }
    
