    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: var(--text-color);
    font-weight: 700;
  }
  
  /* Blog grid */
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }
  
  /* Blog card */
  .blog-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    opacity: 0;
    transform: translateY(30px);
  }
  
  .blog-card.visible {
    opacity: 1;
    transform: translateY(0);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }
  
  .blog-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
  }
  
  .blog-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
  }
  
  .image-placeholder {
    width: 100%;
    height: 100%;
  }
  
  .blog-content {
    padding: 1.5rem;
  }
  
  .blog-date {
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 0.5rem;
  }
  
  .blog-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-color);
    line-height: 1.4;
  }
  
  .blog-excerpt {
    color: #666;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }
  
  .blog-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--primary-color);
    font-weight: 600;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .blog-link:hover {
    color: var(--secondary-color);
  }
  
  .blog-link svg {
    width: 18px;
    height: 18px;
    transition: transform 0.3s ease;
  }
  
  .blog-link:hover svg {
    transform: translateX(5px);
  }
  
  /* Blog CTA */
  .blog-cta {
    text-align: center;
  }
  
  .view-all-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--primary-color);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 30px;
    font-weight: 600;
    text-decoration: none;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }
  
  .view-all-button:hover {
    background: var(--secondary-color);
    transform: translateY(-2px);
  }
  
  .view-all-button svg {
    width: 18px;
    height: 18px;
    transition: transform 0.3s ease;
  }
  
  .view-all-button:hover svg {
    transform: translateX(5px);
  }
  
