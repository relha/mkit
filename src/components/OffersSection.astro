<section class="offers-section">
  <div class="container">
    <h2 class="section-title">Nos solutions IA adaptées à vos besoins</h2>
    
    <div class="offers-grid">
      <div class="offer-card" data-offer="croissance">
        <div class="card-content">
          <h3 class="offer-title">Pack Croissance</h3>
          <p class="offer-description">
            Solutions IA pour développer votre activité et acquérir de nouveaux clients
          </p>
          <button class="cta-button">Découvrir</button>
        </div>
      </div>
      
      <div class="offer-card" data-offer="efficacite">
        <div class="card-content">
          <h3 class="offer-title">Pack Efficacité Interne</h3>
          <p class="offer-description">
            Automatisez vos processus internes et gagnez en productivité
          </p>
          <button class="cta-button">Découvrir</button>
        </div>
      </div>
      
      <div class="offer-card" data-offer="visibilite">
        <div class="card-content">
          <h3 class="offer-title">Pack Visibilité</h3>
          <p class="offer-description">
            Améliorez votre présence en ligne et votre communication digitale
          </p>
          <button class="cta-button">Découvrir</button>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Modal container -->
  <div class="modal-container" id="modalContainer">
    <div class="modal-content">
      <button class="modal-close">&times;</button>
      <div class="modal-body" id="modalBody">
        <!-- Modal content will be injected here -->
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Modal functionality
    const modalContainer = document.getElementById('modalContainer');
    const modalBody = document.getElementById('modalBody');
    const modalClose = document.querySelector('.modal-close');
    
    // Offer details data
    const offerDetails = {
      croissance: {
        title: "Pack Croissance",
        description: "Notre Pack Croissance est conçu pour les PME qui souhaitent développer leur activité et acquérir de nouveaux clients grâce à l'intelligence artificielle.",
        features: [
          "Assistant IA de génération de leads qualifiés",
          "Chatbot personnalisé pour votre site web",
          "Analyse prédictive des tendances du marché"
        ],
        price: "À partir de 490€/mois",
        cta: "Demander une démo"
      },
      efficacite: {
        title: "Pack Efficacité Interne",
        description: "Le Pack Efficacité Interne permet d'automatiser vos processus administratifs et d'optimiser la productivité de vos équipes.",
        features: [
          "Automatisation des tâches administratives récurrentes",
          "Assistant IA pour la gestion documentaire",
          "Analyse et optimisation des processus internes"
        ],
        price: "À partir de 390€/mois",
        cta: "Demander un devis"
      },
      visibilite: {
        title: "Pack Visibilité",
        description: "Améliorez votre présence en ligne et votre communication digitale grâce à nos solutions d'IA dédiées au marketing et à la communication.",
        features: [
          "Génération automatique de contenus optimisés SEO",
          "Analyse de sentiment et monitoring de votre e-réputation",
          "Personnalisation des campagnes marketing par IA"
        ],
        price: "Sur devis",
        cta: "Demander un devis"
      }
    };
    
    // Open modal with specific offer details
    function openModal(offerId) {
      const offer = offerDetails[offerId];
      if (!offer) return;
      
      // Create modal content
      modalBody.innerHTML = `
        <h3 class="modal-title">${offer.title}</h3>
        <p class="modal-description">${offer.description}</p>
        <div class="features-list">
          <h4>Ce pack inclut :</h4>
          <ul>
            ${offer.features.map(feature => `<li>${feature}</li>`).join('')}
          </ul>
        </div>
        <div class="modal-price">${offer.price}</div>
        <button class="modal-cta">${offer.cta}</button>
      `;
      
      // Show modal with animation
      modalContainer.classList.add('active');
      document.body.style.overflow = 'hidden'; // Prevent scrolling
      
      // Add animation class after a small delay to trigger transition
      setTimeout(() => {
        document.querySelector('.modal-content').classList.add('show');
      }, 10);
    }
    
    // Close modal function
    function closeModal() {
      document.querySelector('.modal-content').classList.remove('show');
      
      // Wait for animation to complete before hiding modal
      setTimeout(() => {
        modalContainer.classList.remove('active');
        document.body.style.overflow = ''; // Restore scrolling
      }, 300);
    }
    
    // Add click event listeners to offer cards
    document.querySelectorAll('.offer-card .cta-button').forEach(button => {
      button.addEventListener('click', (e) => {
        e.stopPropagation(); // Prevent card click event
        const offerId = e.target.closest('.offer-card').getAttribute('data-offer');
        openModal(offerId);
      });
    });
    
    // Close modal when clicking close button
    modalClose.addEventListener('click', closeModal);
    
    // Close modal when clicking outside modal content
    modalContainer.addEventListener('click', (e) => {
      if (e.target === modalContainer) {
        closeModal();
      }
    });
    
    // Close modal with Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modalContainer.classList.contains('active')) {
        closeModal();
      }
    });
    
    // Add hover effect to cards
    document.querySelectorAll('.offer-card').forEach(card => {
      card.addEventListener('mouseenter', () => {
        card.classList.add('hover');
      });
      
      card.addEventListener('mouseleave', () => {
        card.classList.remove('hover');
      });
    });
  });
</script>

<style>
  .offers-section {
    padding: 5rem 0;
    background-color: #f9f9f9;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  
  .section-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: var(--text-color);
    font-weight: 700;
  }
  
  .offers-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .offer-card {
    position: relative;
    height: 280px;
    border-radius: 12px;
    background: white;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    overflow: hidden;
    transition: transform 0.4s ease, box-shadow 0.4s ease;
    cursor: pointer;
    perspective: 1000px;
  }
  
  .offer-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--accent-gradient);
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: 1;
  }
  
  .card-content {
    position: relative;
    z-index: 2;
    height: 100%;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    transition: transform 0.4s ease;
  }
  
  .offer-title {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--text-color);
    font-weight: 600;
    transition: color 0.3s ease;
  }
  
  .offer-description {
    color: #666;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    transition: color 0.3s ease;
  }
  
  .cta-button {
    padding: 0.75rem 1.5rem;
    background: var(--primary-color);
    color: white;
    border: none;
    border-radius: 30px;
    font-weight: 600;
    cursor: pointer;
    transform: translateY(20px);
    opacity: 0;
    transition: transform 0.4s ease, opacity 0.4s ease, background-color 0.3s ease;
  }
  
  .cta-button:hover {
    background: var(--secondary-color);
  }
  
  /* Hover effect */
  .offer-card.hover {
    transform: translateY(-10px) scale(1.03) rotateX(5deg) rotateY(5deg);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }
  
  .offer-card.hover::before {
    opacity: 0.9;
  }
  
  .offer-card.hover .card-content {
    transform: translateY(-10px);
  }
  
  .offer-card.hover .offer-title,
  .offer-card.hover .offer-description {
    color: white;
  }
  
  .offer-card.hover .cta-button {
    transform: translateY(0);
    opacity: 1;
  }
  
  /* Modal styles */
  .modal-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }
  
  .modal-container.active {
    opacity: 1;
    visibility: visible;
  }
  
  .modal-content {
    position: relative;
    width: 90%;
    max-width: 600px;
    background: white;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    transform: scale(0.9);
    opacity: 0;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }
  
  .modal-content.show {
    transform: scale(1);
    opacity: 1;
  }
  
  .modal-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background: #f1f1f1;
    border: none;
    font-size: 1.5rem;
    line-height: 1;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }
  
  .modal-close:hover {
    background: #e1e1e1;
  }
  
  .modal-title {
    font-size: 1.8rem;
    margin-bottom: 1rem;
    color: var(--primary-color);
  }
  
  .modal-description {
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }
  
  .features-list {
    margin-bottom: 1.5rem;
  }
  
  .features-list h4 {
    margin-bottom: 0.5rem;
    font-weight: 600;
  }
  
  .features-list ul {
    padding-left: 1.5rem;
  }
  
  .features-list li {
    margin-bottom: 0.5rem;
  }
  
  .modal-price {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--primary-color);
    margin-bottom: 1.5rem;
  }
  
  .modal-cta {
    padding: 0.75rem 1.5rem;
    background: var(--primary-color);
    color: white;
    border: none;
    border-radius: 30px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
    width: 100%;
  }
  
  .modal-cta:hover {
    background: var(--secondary-color);
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .section-title {
      font-size: 2rem;
    }
    
    .offers-grid {
      grid-template-columns: 1fr;
    }
    
    .modal-content {
      padding: 1.5rem;
    }
    
    .modal-title {
      font-size: 1.5rem;
    }
  }
  
  @media (max-width: 480px) {
    .offers-section {
      padding: 3rem 0;
    }
    
    .section-title {
      font-size: 1.75rem;
      margin-bottom: 2rem;
    }
    
    .offer-card {
      height: 250px;
    }
    
    .card-content {
      padding: 1.5rem;
    }
    
    .modal-content {
      padding: 1rem;
    }
  }
</style>
